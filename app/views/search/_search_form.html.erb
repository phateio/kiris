<%= form_tag search_path, method: :get, id: 'searchform', enforce_utf8: false, remote: true do %>
  <%= text_field_tag 'q', @keyword, autofocus: true, :'x-webkit-speech' => true %>
  <%= submit_tag t('search.search'), name: nil, data: {disable: true} %>
  <%= submit_tag t('search.random_search'), name: 'sort', value: 'random', data: {disable: true} %>
<% end %>
