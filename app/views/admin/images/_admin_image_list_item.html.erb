<table class="image-instance">
  <tbody>
  <tr><td colspan="2" title="<%= image.track.tags %>">
    <%= link_to '[+]', track_images_path(image.track), remote: true %>
    <%= image.track.long_title %>
  </td></tr>
  <tr>
    <th rowspan="5">
      <%= link_to image.url, target: '_blank' do %>
        <%= image_tag image.thumbnail, size: '90x90', alt: image.hash %>
      <% end %>
    </th>
  </tr>
  <tr><td><%= t('images.posted_date') %>: <%= date_tag image.created_at %></td></tr>
  <tr><td><%= t('images.source_url') %>: <%= image.source.present? ? link_to(image.source_abbreviation, image.source, target: '_blank') : 'N/A' %></td></tr>
  <tr><td><%= t('form.nickname') %>: <%= image.nickname.present? ? image.nickname : 'No Name' %></td></tr>
  <tr><td><%= t('form.tripcode') %>: <%= get_userip_with_tripcode(image.userip) %></td></tr>
  <tr><td colspan="2" class="<%= image.status_msg %>"><%= render_admin_image_list_item_form(image) %></td></tr>
  </tbody>
</table>